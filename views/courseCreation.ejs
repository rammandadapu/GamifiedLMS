        <div class="col-lg-12">
            <div class="panel panel-default">
                <h1>
                    Welcome Admin !
                </h1>
                <div class="panel-body" ng-show ="courseCreation">
                    <h3>
                        Course Creation
                    </h3>
                    <div class="row">
                        <div>
                            <form role="form">

                                <div class="col-lg-8 col-lg-offset-4 form-group text-center" >
                                    <label for="Server" class = "col-sm-2 control-label">Course Name :</label>
                                    <div class = "col-sm-6">
                                        <input type="text" class="form-control" name="courseName" ng-model='courseName' placeholder="Enter Course Name"  >
                                    </div>
                                    <br>
                                    <br>
                                    <label class = "col-sm-2 control-label">Title :</label>
                                    <div class = "col-sm-6">
                                        <input type="text" class="form-control" name="title" ng-model='title' placeholder="Enter Title">
                                    </div>
                                    <br>
                                    <br>
                                    <label class = "col-sm-2 control-label">Description :</label>
                                    <div class = "col-sm-6">
                                        <textarea class="form-control" name="description" ng-model='description' placeholder="Enter Description">
                                            </textarea>
                                    </div>
                                    <br>
                                    <br>
                                    <br>
                                    <label class = "col-sm-2 control-label">Image URL :</label>
                                    <div class = "col-sm-6">
                                        <input type="text" class="form-control" name="image" ng-model='image' placeholder="Enter Image URL">
                                    </div>
                                </div>
                                <br><br>
                                <button type="submit" class="btn btn-info" ng-click="createCourse()">Create Course</button>
                                <button type="reset" class="btn btn-warning" ng-click="resetChanges()">Go Back</button>
                            </form>
                        </div>

                    </div>
                </div> <!-- END OF PANEL BODY -->

                <div class="panel-body" ng-show="courseDisplay">
                        <h3>Course Details </h3>
                    <div class="row text-center">
                            <div class ="col-lg-4 col-lg-offset-4 form-group">
                                <label class = "col-sm-4 control-label">Course Name :</label>
                                <div class = "col-sm-6">
                                    <p>Java</p>
                                </div>

                                <label  class = "col-sm-4 control-label">Title :</label>
                                <div class = "col-sm-6">
                                    <p>Java - A complete reference</p>

                                </div>

                                <label   class = "col-sm-4 control-label">Description :</label>
                                <div class = "col-sm-8">
                                    <p>Java is Object oriented Language</p>
                                </div>

                                <label  class = "col-sm-4 control-label">Image URL:</label>
                                <div class = "col-sm-6">
                                   <p> Http://java.com </p>
                                </div>
                                <button type="button" class="btn btn-success" ng-click="addModule()">Add Module</button>
                                <button type="reset" class="btn btn-warning" ng-click="resetChanges()">Go Back</button>
                            </div>
                    </div>
                </div>

                <div class="panel-body" ng-show="moduleCreation">
                    <h4>Module Creation</h4>
                    <div class="col-lg-8 col-lg-offset-4 form-group text-center">
                        <label  class="col-sm-2 control-label">
                            Module Name :
                        </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="title" ng-model='title' placeholder="Enter module name" required>
                        </div>
                        <br>
                        <br>
                        <label class = "col-sm-2 control-label">Description :</label>
                        <div class = "col-sm-6">
                            <textarea rows="1" class="form-control" name="description" ng-model='description' placeholder="Enter Description"></textarea>
                        </div>
                        <br>
                        <br>
                        <label  class="col-sm-2 control-label">
                            Content Video URL :
                        </label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="videoURL" ng-model='videoURL' placeholder="Enter Video URL" required>
                        </div>
                        <br>
                        <br>
                    </div>
                    <button type="submit" class="btn btn-info" ng-click="createModule()">Create Module</button>
                    <button type="reset" class="btn btn-warning" ng-click="resetChanges()">Cancel</button>
                </div>

            </div>
