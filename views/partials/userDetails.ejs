<!DOCTYPE html>
<div id="usermodule" class="col-xs-8" ng-controller="userController as user">
<div ng-controller="courseListController">
	<div class="row" style="margin:12px;"><!--style="color:#777;background:#ccffcc;" -->
			<div class="col-xs-3">TITLE: {{user.titl}}</div>
			<div class="col-xs-3">SCORE: {{user.score}}</div>
		<!--</div>
	<div class="row" style="margin-bottom: 9px;">-->
	<%include search-modal.ejs %>
		<div class="col-xs-6 search-box">
			<input type="search" name="q" ng-model=searchTerm class="input-bsc" placeholder="search">
			<button ng-click="searchCourse()" >Go!</button>
		</div>
	</div>
    </div>
	
	<div class="row user-box">
		
		<div class="row user-lg">
		<div class="col-xs-6">
			<table class="tbl-styling" style="width: 100%;">
				<caption>BADGES</caption>
				<tr>
					<th class="bg-ylw">S.No</th>
					<th class="bg-ylw">Names</th>
					<th class="bg-ylw">Points</th>
					<th class="bg-ylw">Badges</th>	
				</tr>
					<tr ng-repeat="badge in user.badges">
						<td>{{$index+1}}</td>
						<td>{{badge.name}}</td>
						<td>{{badge.points}}</td>
						<td><img ng-src={{badge.badgeImg}} alt="badge" style="width:60px;height:60px;"></td>
					</tr>
			</table>
		</div>
		<div class="col-xs-6">
			<table class="tbl-styling" style="width: 100%;">
				<caption>LEADERBOARDS</caption>
				<tr>
					<th class="bg-org">S.No</th>
					<th class="bg-org">Name</th>
					<th class="bg-org">Title</th>
					<th class="bg-org">Points</th>	
				</tr>
				<tr ng-repeat="rank in user.rankings">
					<td>{{$index+1}}</td>
					<td>{{rank.name}}</td>
					<td>{{rank.title}}</td>
					<td>{{rank.points}}</td>
				</tr>
			</table>
			</div>
		</div>
		<div class="row user-sm">
		<div class="col-lg-12">
			<table class="tbl-styling" style="width: 100%;">
				<caption>DAILY GOALS</caption>
				<tr>
					<th class="bg-pink">S.No</th>
					<th class="bg-pink">Name</th>
					<th class="bg-pink">Description</th>
					<th class="bg-pink">Deadline</th>	
				</tr>
					<tr ng-repeat="goal in user.goals">
						<td>{{$index+1}}</td>
						<td>{{goal.name}}</td>
						<td>{{goal.desc}}</td>
						<td>{{goal.deadline}}</td>
					</tr>
			</table>
			</div>
		</div>
		<!-- <div class="row user-sm">
			<div ng-repeat="sm in user.socialdetails" class="col-lg-4"><a target="_blank" rel="noopener" ng-href={{sm.link}}><img class="social-icon" ng-src={{sm.icon}} alt="badge"></a></div>
		</div> -->
	</div>
</div> 
