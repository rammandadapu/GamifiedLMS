    <script>
    function personController($scope,$http,$location) {
        $scope.loginVal = true;
        $scope.signUp = function() {                
            $http({
                method: 'POST',
                url: '/signup',
                data: { "fname": $scope.fname, "lname": $scope.lname,
                        "email": $scope.email, "password": $scope.password }
                
             }).success(function(response){ 
                

                if(response == "success")
                    {                       
                        alert("Successfully registered! Please log in.");
                        $scope.fname = "";
                        $scope.lname = "";
                        $scope.email = "";
                        $scope.password = ""; 
                        //newURL = '/profile/:'+response.userID;
                        //window.location = newURL;
                    }                          
                else {
                        //document.getElementById("error").innerHTML = response.Status;
                        //document.getElementById('erroralert').style.display = "block";
                        alert("There was an error while registering. Please try again.");
                    }
            }).error(function(error){
                //document.getElementById("error").innerHTML = response.Status;
                //document.getElementById('erroralert').style.display = "block";
                alert("There was an error while registering. Please try again.");
            });
        };
    
        
        $scope.signin = function() {                
            $http({
                method: 'POST',
                url: '/signin',
                data: { "email": $scope.loginEmail, "password": $scope.loginPassword }              
             }).success(function(response){
               
                //alert(JSON.stringify(response));                
                if(response.status == "success")
                    {
                        $scope.loginVal = false;
                        //window.location = '/courseDetails';                     
                        alert("Successful");
                        //href="#portfolio";
                    }                          
                else
                    {
                        $scope.invalidLoginVal = "Email/Password invalid!";
                        alert("Invalid password. Please try again.")
                    }                   
            }).error(function(error){
                //document.getElementById("error").innerHTML = "An error occurred!"
                //document.getElementById('erroralert').style.display = "block";
                alert("There was an error while login. Please try again.");
            });
        };
    }
